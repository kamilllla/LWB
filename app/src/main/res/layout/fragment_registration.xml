<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnterActivity2"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedLogin"
        app:boxStrokeColor="@color/greyLight"
        app:shapeAppearanceOverlay="@style/ShapeOfTextField"
        android:layout_width="325dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        style="@style/TextField"
        android:hint="@string/login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputLogin"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedPassword"
        style="@style/TextField"
        app:shapeAppearanceOverlay="@style/ShapeOfTextField"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/black"
        android:hint="@string/password"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPassword"
            style="@style/EditText" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedPassword2"
        style="@style/TextField"
        app:shapeAppearanceOverlay="@style/ShapeOfTextField"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/black"
        android:hint="@string/repassword"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPassword2"
            style="@style/EditText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedNumber"
        style="@style/TextField"
        app:shapeAppearanceOverlay="@style/ShapeOfTextField"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/black"
        android:hint="@string/phone"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputNumber"
            style="@style/EditText"
            android:inputType="phone"/>
    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonUp"
        style="@style/Button"
        android:layout_gravity="center"
        android:text="@string/sign_up" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        style="@style/ButtonOutline"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/cancel" />



</LinearLayout>