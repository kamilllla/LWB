<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_lines_2"
    tools:context=".activities.VPlayer">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:strokeColor="@color/greyLight"
        app:icon="@drawable/cancel"
        android:paddingLeft="30dp"
        app:iconSize="25dp"
        app:iconGravity="start"
        app:iconTint="@color/greyLight"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/yp"
        android:layout_height="300dp"
        android:layout_width="wrap_content"

        android:layout_gravity="center_horizontal|center_vertical"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/totTest"
        style="@style/Button"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:text="Пройти тест" />




</LinearLayout>