<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_lines_2"
   >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/header"
            android:text="@string/events"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>



    <com.events.calendar.views.EventsCalendar
        android:id="@+id/calender_event"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="70dp"
        android:background="#D7FFFFFF"
        android:overScrollMode="never"
        app:datesTextSize="20sp"
        app:eventDotColor="@color/dark_green"
        app:monthTitleColor="@color/black"

        app:monthTitleTextSize="25sp"
        app:primaryTextColor="@color/black"
        app:secondaryTextColor="#666666"
        app:selectedTextColor="#000000"
        app:selectionColor="#D0FF00"
        app:weekHeaderColor="@color/black"
        app:weekHeaderTextSize="16sp" />



</LinearLayout>